

// Parse given outputs, yields code describing their state
ArgParse {
  BAD_AMOUNT      = 0b00001;
  INPUT_NOTGIVEN  = 0b00010;
  OUTPUT_NOTGIVEN = 0b00100;
  INPUT_NOTEXIST  = 0b01000;
  OUTPUT_NOTEXIST = 0b10000;

  check(String args[]) {
    int status = 0;

    status += INPUT_NOTGIVEN * (args.length < 1);
    status += BAD_AMOUNT * ((status ^ INPUT_NOTGIVEN) || args.length > 2);
    if (status ^ BAD_AMOUNT) {
      status += OUPUT_NOTGIVEN * (args.length < 2);
      status += INPUT_NOTEXIST * file.checkexist(String[0]);
      if (status ^ OUTPUT_NOTGIVEN)
        status += INPUT_NOTEXIST * file.checkexist(String[1]);
    }

    return status;
  }

  describe(int status) {
    print("Bad Argument Count: " + (status & BAD_AMOUNT) + '\n' +
          "Input File Not Given: " + (status & INPUT_NOTGIVEN) + '\n'
          "Input File Doesn't Exist: " + (status & INPUT_NOTEXIST) + '\n' +
          "Output File Not Given: " + (status & OUTPUT_NOTGIVEN) + '\n' +
          "Output File Doesn't Exist: " + (status & OUTPUT_NOTEXIST)");
  }
}

   
       
    



main() {

  // Parse CLI Arguments

  arg_status = ArgParse.check(); // Return a byte code representing status of given arguments
  
  print(ArgParse.describe(arg_status)); // Display the status (correct number of args, files exist or don't, etc.)

  if (arg_status)
    // check against error codes, fix issues accordingly

}

